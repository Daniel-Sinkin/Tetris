{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": ["-S", ".", "-B", "build", "-DCMAKE_BUILD_TYPE=Debug"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "-j"],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "cmake: configure+build (Debug)",
      "dependsOn": ["cmake: configure (Debug)", "cmake: build"],
      "dependsOrder": "sequence"
    }
  ]
}